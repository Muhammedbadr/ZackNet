    <div class="container my-5">
        <!-- Create New Post -->
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Create New Post</h5>
                    </div>
                    <div class="card-body">
                        <form enctype="multipart/form-data" accept-charset="UTF-8" action="/post/create" method="post">
                            <div class="mb-3">
                                <textarea name="post_text" class="form-control" id="postTextarea" rows="3" placeholder="What's happening?" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Attach an image</label>
                                <input name="image" class="form-control" type="file" id="image">
                            </div>
                            <button type="submit" class="btn btn-success w-100">Create Post</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center  mt-5">
            <div class="col-md-8">
                <% @feeds.each do |feed| %>
                    <div class="card mb-4  border-2 rounded-3">
                        <%if feed.is_a?(Post)%>
                            <div class="card-header bg-primary text-white d-flex align-items-center">
                                <i class="bi bi-person-circle me-2 fs-4"></i>
                                <p class="mb-0">
                                    <%= feed.user.username %> created a new post
                                </p>
                            </div>
                            <% if feed.image.attached? %>
                                <img src="<%= url_for(feed.image) %>" class="card-img" alt="Post Image" style="max-height: 700px; object-fit: cover;">
                            <% end %>
                            <div class="card-body">
                                <p class="card-text text-dark mb-2 "><%= feed.post_text %></p>
                            </div>
                            <div class="card-footer d-flex align-items-center px-4 py-2  rounded-bottom border-top-0 bg-light">
                                <div class="d-flex align-items-center w-100 justify-content-between">
                                    <form action="/post/like" method="post" class="d-flex w-100 justify-content-between">
                                        <input type="hidden" name="post_id" value="<%= feed.id %>">
                                        
                                        <!-- Like Button -->
                                        <% if feed.likes.exists?(user_id: current_user.id) %>
                                            <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                                                <i class="fa-solid fs-5 fa-heart  me-2"  style="color: #ff4747;"></i>
                                                <span class=""  style="color: #ff4747;">Liked</span>
                                            </button>
                                        <% else %>
                                            <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                                                <i class="bi bi-heart fs-5 text-muted me-2"></i>
                                                <span class="text-muted">Like</span>
                                            </button>
                                        <% end %>

                                        <!-- Comment Button -->
                                        <a class="btn p-0 border-0 bg-transparent d-flex" data-bs-toggle="collapse" href="#collapse<%= feed.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
                                            <i class="bi bi-chat fs-5 me-2 text-muted"></i>
                                            <span class="text-muted">Comment</span>
                                        </a>
                                    </form>
                                </div>
                            </div>
                            <div class="collapse" id="collapse<%= feed.id %>">
                                <div class="card card-body border-0 p-4 mb-3">
                                    <!-- Comment Form -->
                                    <form action="/post/comment" method="post" class="mb-4">
                                        <input type="hidden" name="post_id" value="<%= feed.id %>">
                                            <div class="mb-3">
                                                <label for="comment" class="form-label fw-bold">Add a Comment:</label>
                                                <textarea name="comment_text" class="form-control" placeholder="Write a comment..." rows="3"></textarea>
                                            </div>
                                        <button type="submit" class="btn btn-primary w-100">Post Comment</button>
                                    </form>
                                </div>
                            </div>
                            <!-- Comment Show Section -->
                            <div class="comments-section">
                                <% feed.comments.each do |comment| %>
                                    <div class="card mb-3 shadow-sm border-0 rounded-lg " style="padding:6px">
                                        <div class="card-body bg-light">
                                            <!-- Comment Header -->
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person-circle text-primary fs-4 me-2"></i>
                                                    <strong class="text-primary me-2"><%= comment.user.username %></strong>
                                                </div>
                                                <!-- Timestamp -->
                                                <small class="text-muted fst-italic">2 hours ago</small>
                                            </div>
                                            <!-- Comment Text -->
                                            <p class="mt-3 mb-1 text-secondary"><%= comment.comment_text %></p>
                                        </div>
                                    </div>
                                <% end %>
                            </div>

                        <%else%>
                            <div class="card-header bg-primary text-white d-flex align-items-center">
                                <i class="bi bi-person-circle me-2 fs-4"></i>
                                <p class="mb-0">
                                    <%= feed.post.user.username %> created a new comment
                                </p>
                            </div>
                            <% if feed.post.image.attached? %>
                                <img src="<%= url_for(feed.post.image) %>" class="card-img" alt="Post Image" style="max-height: 700px; object-fit: cover;">
                            <% end %>
                            <div class="card-body">
                                <p class="card-text text-dark mb-2 "><%= feed.post.post_text %></p>
                            </div>
                            <div class="card-footer d-flex align-items-center px-4 py-2  rounded-bottom border-top-0 bg-light">
                                <div class="d-flex align-items-center w-100 justify-content-between">
                                    <form action="/post/like" method="post" class="d-flex w-100 justify-content-between">
                                        <input type="hidden" name="post_id" value="<%= feed.post.id %>">
                                        
                                        <!-- Like Button -->
                                        <% if feed.post.likes.exists?(user_id: current_user.id) %>
                                            <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                                                <i class="fa-solid fs-5 fa-heart  me-2"  style="color: #ff4747;"></i>
                                                <span class=""  style="color: #ff4747;">Liked</span>
                                            </button>
                                        <% else %>
                                            <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                                                <i class="bi bi-heart fs-5 text-muted me-2"></i>
                                                <span class="text-muted">Like</span>
                                            </button>
                                        <% end %>

                                        <!-- Comment Button -->
                                        <a class="btn p-0 border-0 bg-transparent d-flex" data-bs-toggle="collapse" href="#collapse<%= feed.post.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
                                            <i class="bi bi-chat fs-5 me-2 text-muted"></i>
                                            <span class="text-muted">Comment</span>
                                        </a>
                                    </form>
                                </div>
                            </div>
                            <div class="collapse" id="collapse<%= feed.post.id %>">
                                <div class="card card-body border-0 p-4 mb-3">
                                    <!-- Comment Form -->
                                    <form action="/post/comment" method="post" class="mb-4">
                                        <input type="hidden" name="post_id" value="<%= feed.post.id %>">
                                        <div class="mb-3">
                                            <label for="comment" class="form-label fw-bold">Add a Comment:</label>
                                            <textarea name="comment_text" class="form-control" placeholder="Write a comment..." rows="3"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Post Comment</button>
                                    </form>
                                </div>
                            </div>
                            <!-- Comment Show Section -->
                            <div class="comments-section">
                                <% feed.post.comments.each do |comment| %>
                                    <div class="card mb-3 border-light shadow-sm rounded-lg " style="padding:6px">
                                        <div class="card-body">
                                            <!-- Comment Username and Text -->
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <i class="bi bi-person-circle text-primary me-2 fs-4"></i>
                                                    <strong><%= comment.user.username %></strong>
                                                </div>
                                                <!-- Optional: Timestamp (e.g., '2 hours ago') -->
                                                <small class=" text-gray-400">2 hours ago</small>
                                            </div>
                                            <p class="mt-2"><%= comment.comment_text %></p>
                                        </div>
                                    </div>
                                <%end%>
                            </div>
                        <%end%>
                    </div>
                <% end %>
            </div>
        </div>
    </div>


                    
