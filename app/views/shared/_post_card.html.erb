<div class="card mb-4 shadow-sm border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex align-items-center gap-2 py-2">
        <% if post.user.avatar.attached? %>
            <img src="<%= url_for(post.user.avatar) %>" class="object-cover rounded-circle border border-0" alt="User Avatar" style="height: 40px; width: 40px; object-fit: cover;">
        <% else %>
            <i class="bi bi-person-circle fs-1 text-white"></i>
        <% end %>
        <p class="mb-0 fw-normal text-white">
            <a class="text-white" style="text-decoration: none;" href="/user/<%= post.user.id %>">
                <%= post.user.username %> 
            </a>
        </p>
    </div>

    <% if post.image.attached? %>
        <img src="<%= url_for(post.image) %>" class="card-img-top" alt="Post Image" style="max-height: 500px; object-fit: cover;">
    <% end %>

    <div class="card-body">
        <p class="card-text text-dark mb-3"><%= post.post_text %></p>
    </div>

    <div class="card-footer d-flex align-items-center px-4 py-2 rounded-bottom border-top-0 bg-light">
        <div class="d-flex align-items-center w-100 justify-content-between">
            <form action="/post/like" method="post" class="d-flex w-100 justify-content-between">
                <input type="hidden" name="post_id" value="<%= post.id %>">
                <!-- Like Button -->
                <% if post.likes.exists?(user_id: current_user.id) %>
                    <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                        <i class="fa-solid fs-5 fa-heart text-danger me-2"></i>
                        <span class="text-danger">Liked</span>
                    </button>
                <% else %>
                    <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                        <i class="bi bi-heart fs-5 text-muted me-2"></i>
                        <span class="text-muted">Like</span>
                    </button>
                <% end %>

                <!-- Comment Button -->
                <a class="btn btn-sm text-primary  fs-6 fw-bold" data-bs-toggle="collapse" href="#collapse<%= post.id %>" role="button" aria-expanded="false" aria-controls="collapse<%= post.id %>">
                    <i class="bi bi-chat  me-2"></i>Comments
                </a>
            </form>
        </div>
    </div>

    <div class="collapse" id="collapse<%= post.id %>">
        <div class="card card-body border-0 p-4 mb-3">
            <!-- Comment Form -->
            <form action="/post/comment" method="post" class="mb-4">
                <input type="hidden" name="post_id" value="<%= post.id %>">
                <div class="mb-3">
                    <label for="comment" class="form-label fw-bold">Add a Comment:</label>
                    <textarea name="comment_text" class="form-control" placeholder="Write a comment..." rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Post Comment</button>
            </form>
        </div>
    </div>

    <!-- Comment Show Section -->
    <div class="comments-section">
        <% post.comments.each do |comment| %>
            <div class="card shadow-sm border-0 rounded-lg mb-3" style="padding: 6px;">
                <div class="card-body bg-light">
                    <!-- Comment Header -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <a class="text-white d-flex align-items-center" style="text-decoration: none;" href="/user/<%= comment.user.id %>">
                                <% if post.user.avatar.attached? %>
                                    <img src="<%= url_for(comment.user.avatar) %>" 
                                        class="object-cover rounded-circle border border-0 me-1" 
                                        alt="User Avatar" 
                                        style="height: 20px; width: 20px; object-fit: cover;">
                                <% else %>
                                    <i class="bi bi-person-circle text-primary fs-4 me-2"></i>
                                <% end %>
                                <strong class="text-primary"><%= comment.user.username %></strong>
                            </a>
                        </div>

                        <!-- Timestamp -->
                        <small class="text-muted fst-italic">2 hours ago</small>
                    </div>
                    <!-- Comment Text -->
                    <p class="mt-3 mb-1 text-secondary"><%= comment.comment_text %></p>
                </div>
            </div>
        <% end %>
    </div>
</div>
