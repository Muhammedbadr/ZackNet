<div class="container mt-5">
  <!-- Profile Header -->
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-primary text-white d-flex align-items-center">
      <i class="bi bi-person-circle me-3 fs-4"></i>
      <div>
        <h3 class="mb-0"><%= @user.username %></h3>
        <p class="mb-0">Joined on <%= @user.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>
  </div>

  <!-- User Posts Section -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="mb-4 text-center">Posts by <%= @user.username %></h4>
      
      <% @user.posts.each do |post| %>
        <div class="card mb-4 border-2 rounded-3">
          <!-- Render the Post Card (Reusing the existing design for consistency) -->
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-person-circle me-2 fs-4"></i>
                <p class="mb-0">
                <%= post.user.username %> created a new post
                </p>
            </div>
            <% if post.image.attached? %>
                <img src="<%= url_for(post.image) %>" class="card-img" alt="Post Image" style="max-height: 700px; object-fit: cover;">
            <% end %>
            <div class="card-body">
                <p class="card-text text-dark mb-2"><%= post.post_text %></p>
            </div>
            <div class="card-footer d-flex align-items-center px-4 py-2 rounded-bottom border-top-0 bg-light">
                <div class="d-flex align-items-center w-100 justify-content-between">
                <form action="/post/like" method="post" class="d-flex w-100 justify-content-between">
                    <input type="hidden" name="post_id" value="<%= post.id %>">

                    <!-- Like Button -->
                    <% if post.likes.exists?(user_id: current_user.id) %>
                    <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                        <i class="fa-solid fs-5 fa-heart me-2" style="color: #ff4747;"></i>
                        <span style="color: #ff4747;">Liked</span>
                    </button>
                    <% else %>
                    <button type="submit" class="btn p-0 border-0 bg-transparent d-flex align-items-center me-3">
                        <i class="bi bi-heart fs-5 text-muted me-2"></i>
                        <span class="text-muted">Like</span>
                    </button>
                    <% end %>

                    <!-- Comment Button -->
                    <a class="btn p-0 border-0 bg-transparent d-flex" data-bs-toggle="collapse" href="#collapse<%= post.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <i class="bi bi-chat fs-5 me-2 text-muted"></i>
                    <span class="text-muted">Comment</span>
                    </a>
                </form>
                </div>
            </div>
            <div class="collapse" id="collapse<%= post.id %>">
                <div class="card card-body border-0 p-4 mb-3">
                <!-- Comment Form -->
                <form action="/post/comment" method="post" class="mb-4">
                    <input type="hidden" name="post_id" value="<%= post.id %>">
                    <div class="mb-3">
                    <label for="comment" class="form-label fw-bold">Add a Comment:</label>
                    <textarea name="comment_text" class="form-control" placeholder="Write a comment..." rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Post Comment</button>
                </form>
                </div>
            </div>
            <!-- Comments Section -->
                <div class="comments-section">
                    <% post.comments.each do |comment| %>
                        <div class="card shadow-sm border-0 rounded-lg mb-2" style="padding:6px">
                            <div class="card-body bg-light">
                                <!-- Comment Header -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle text-primary fs-4 me-2"></i>
                                        <strong class="text-primary me-2"><%= comment.user.username %></strong>
                                    </div>
                                    <!-- Timestamp -->
                                    <small class="text-muted fst-italic">2 hours ago</small>
                                </div>
                                <!-- Comment Text -->
                                <p class="mt-3 mb-1 text-secondary"><%= comment.comment_text %></p>
                            </div>
                        </div>
                    <% end %>
                </div>
        </div>
      <% end %>
    </div>
  </div>
  
</div>
