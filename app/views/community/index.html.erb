<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-sm col-lg-7 col-md-8">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Create a New Community</h3>
        <form enctype="multipart/form-date" action="/community/create" method="post" enctype="multipart/form-data">
            <!-- Community Name Input -->
            <div class="mb-3">
              <label for="communityName" class="form-label">Community Name</label>
              <input
                type="text"
                name="name"
                class="form-control"
                id="communityName"
                placeholder="Enter the community name"
                required
              />
            </div>

            <!-- Image Upload Input -->
            <div class="mb-3">
              <label for="imageUpload" class="form-label">Community Image</label>
              <input
                type="file"
                name="image"
                class="form-control"
                id="imageUpload"
              />
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                Create Community
              </button>
            </div>
        </form>
    </div>
  </div>
</div>

<!-- Display the list of communities -->
<div class="container mt-4">
  <h4 class="text-center mb-3">Existing Communities</h4>
  <div class="row justify-content-center">
    <% @communities.each do |community| %>
      <div class="col-lg-7 col-md-8 mb-3">
        <div class="card shadow-sm border-primary hover-effect">
            <% if community.image.attached? %>
                <img class="card-img-top" style="height: 300px; object-fit: cover;" src="<%= url_for(community.image) %>" alt="Community Image">
            <% end %>
          <div class="card-body text-start">
            <h5 class="card-title fw-bolder"><%= community.name %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
